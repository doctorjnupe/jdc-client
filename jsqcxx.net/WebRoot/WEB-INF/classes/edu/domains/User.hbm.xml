<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.domains" catalog="qianchengxx">

	<class name="User" table="user">

		<id name="username" column="username">
			<generator class="assigned" />
		</id>
		<property name="password" column="password" not-null="true" />
		<property name="email" column="email" not-null="false" />
		<property name="contact" column="contact" not-null="false" />
		<property name="permission" column="permission" not-null="true" />
		<property name="question" column="question" not-null="true" />
		<property name="answer" column="answer" not-null="true" />
		<property name="registerTime" column="register_time" not-null="true" />
		
	</class>
	
</hibernate-mapping>
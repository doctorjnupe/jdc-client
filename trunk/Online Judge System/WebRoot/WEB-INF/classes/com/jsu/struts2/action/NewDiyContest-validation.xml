<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>

    <field name="title">
        <field-validator type="requiredstring">
            <message key="title required"/>
        </field-validator>
    </field>
    
    <field name="description">
        <field-validator type="requiredstring">
            <message key="description required"/>
        </field-validator>
    </field>

    <field name="startDate">
        <field-validator type="required">
            <message key="startDate required"/>
        </field-validator>
        <field-validator type="date">
            <message key="startDate illogical"/>
        </field-validator>
    </field>
    
    <field name="startTime">
        <field-validator type="required">
            <message key="startTime required"/>
        </field-validator>
        <field-validator type="date">
            <message key="startTime illogical"/>
        </field-validator>
    </field>
    
    <field name="endDate">
        <field-validator type="required">
            <message key="endDate required"/>
        </field-validator>
        <field-validator type="date">
            <message key="endDate illogical"/>
        </field-validator>
    </field>
    
    <field name="endTime">
        <field-validator type="required">
            <message key="endTime required"/>
        </field-validator>
        <field-validator type="date">
            <message key="endTime illogical"/>
        </field-validator>
    </field>
    
</validators>